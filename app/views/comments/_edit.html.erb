<div class="comment-<%=@comment.id.to_s%>">
  <div class="comment-meta">
    <%= link_to @comment.user.username,profile_path(@comment.user.username), class:"text-dark" %>
  </div>
  <%= form_for(@comment, remote: true) do |f|%>
    <div class="input-group">
      <%= f.text_field :content, class:"form-control" %>
      <div class="input-group-append">
        <%= f.submit "Update", class:"btn btn-outline-success update" %>
      </div>
    </div>
  <% end %>
</div>
