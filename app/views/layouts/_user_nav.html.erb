<div role="search">
  <%= form_tag root_path, class: 'navbar-form', method: :get do %>
    <div class="input-group">
      <%= text_field_tag :query, params[:query], id: 'typeahead', class: 'search-input form-control', placeholder: 'Search users' %>
    </div>
  <% end %>
</div>

<li class="nav-item">
  <%= link_to root_path, class: "nav-link active" do %>
    <i class="fas fa-home"></i> Home
  <% end %>
</li>

<li class="nav-item">
  <%= link_to new_post_path, class: "nav-link active" do %>
    <i class="fas fa-plus"></i> New Post
  <% end %>
</li>
<li class="nav-item">
  <%= link_to new_story_path, class: "nav-link active" do %>
    <i class="fas fa-plus"></i> New Story
  <% end %>
</li>
<li class="nav-item">
  <%= link_to profile_path(current_user.username), class: "nav-link active" do %>
    <%= current_user.full_name %>
  <% end %>
</li>
<li class="nav-item">
  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link active" do %>
    <i class="fas fa-sign-out-alt"></i>
  <% end %>
</li>
