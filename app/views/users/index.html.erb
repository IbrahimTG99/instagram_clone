<%="#{@posts.size.to_s} posts found."%>
<div class:"container">
  <div class:"row">
    <div class:"col-8">
      <% @posts.each do |post|%>
        <div class:"card">
          <div class:"card-body">
            <h5 class:"card-title">
              <%=post.user.username %>
            </h5>
            <p class:"card-text">
              <%= post.caption %>
            </p>
            <%= image_tag post.image.url, class: 'img  img-fluid'%>
            <p class:"card-text">
              <small class:"text-muted">
                <%= post.created_at.strftime("%b %d, %Y") %>
              </small>
            </p>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
