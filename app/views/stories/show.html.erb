<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="post">
        <%= image_tag @story.image.url,style:"inline-size: -moz-available;", class:"img  img-fluid" if @story.image.exists? %>
      </div>
    </div>

    <div class="col-4">
      <div class="post-meta">
        <%= link_to @story.user.username, profile_path(@story.user.username), class:"text-dark" %>
      </div>
      <div class="post-details">
        <small class="text-muted">
          <%= time_ago_in_words @story.created_at%> ago
        </small>
      </div>
    </div>
  </div>
</div>
