<%=form_for @post, html: {multipart: true} do |f|%>

  <div class="form-group">
    <%=f.label :image%>
    <%= f.file_field :image, class:"form-control" %>
  </div>

  <div class="form-group">
    <%=f.label :caption%>
    <%= f.text_area :caption, class:"form-control" %>
  </div>

  <%= f.submit 'Save Post', class: 'btn btn-success' %>
<%end%>
